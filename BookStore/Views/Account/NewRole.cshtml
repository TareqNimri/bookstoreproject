
@model RoleModel
@section Body{


    <form method="post">
        <div class="container fluid">
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Role Name</label>
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" ></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">

                        <input type="submit" class="btn btn-primary" asp-action="SaveRole" value="Save" />
                    </div>
                </div>
            </div>
        </div>
        </form>
}
