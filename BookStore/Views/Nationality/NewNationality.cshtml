@model vmNationality



@section Body{
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>

                                <th>Nationality</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Nationality item in Model.nationalities)
                            {
                                <tr>

                                    <td>@item.Name</td>
                                    <td><a asp-action="Edit" asp-route-Id="@item.Id">Edit </a>|<a asp-action="DeleteNat" asp-route-Id="@item.Id">Delete</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>


            </div>
            <input type="hidden" asp-for="nationality.Id" />
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="control-label">Stock</label>
                        <input type="text" class="form-control" asp-for="nationality.Name" />
                        <span asp-validation-for="nationality.Name"></span>

                    </div>
                </div>
            </div>
            
                <div class="col-lg-6">
                    @if ((bool)ViewData["IsEdited"] == false)
                    {
                        <input type="submit" value="Save" class="btn btn-primary" asp-action="Save" />
                    }
                    else
                    {
                        <input type="submit" value="Update" class="btn btn-primary" asp-action="Update" />
                    }
                </div>
            </div>


        </div>

      
    </form>
}
